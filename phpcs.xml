<?xml version="1.0"?>
<ruleset name="PSR1 and PSR12">
    <description>PSR1 and PSR12 coding standards</description>
    <rule ref="PSR1"/>
    <rule ref="PSR12"/>

    <file>app/</file>
    <file>config/</file>
    <file>routes/</file>
    <file>tests/</file>

    <exclude-pattern>\.vue$</exclude-pattern>
    <exclude-pattern>\.js$</exclude-pattern>
    <exclude-pattern>vendor</exclude-pattern>
    <exclude-pattern>tests/_*</exclude-pattern>
</ruleset>
