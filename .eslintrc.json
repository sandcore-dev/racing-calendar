{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/strongly-recommended",
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "indent": ["error", 4],
        "no-alert": "warn",
        "no-console": "warn",
        "vue/multi-word-component-names": "off"
    },
    "settings": {
        "import/resolver": {
            "alias": {
                "map": [
                    ["@", "./resources/js"]
                ],
                "extensions": [".js", ".json", ".node", ".vue"]
            }
        }
    }
}
